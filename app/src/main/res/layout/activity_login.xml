<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/login_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/icon_login_close"/>

    <TextView
        android:layout_width="@dimen/item_height"
        android:layout_height="@dimen/item_height"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_gravity="center|center_horizontal"
        android:background="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/header_default_height"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_large">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_login_name"/>
        <EditText
            android:id="@+id/login_mobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:inputType="number"
            android:background="@null"
            android:hint="请输入手机号码"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:background="@color/light_gray"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/header_default_height"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_login_lock"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/login_verify_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="验证码"
            android:layout_centerVertical="true"
            android:background="@null"
            android:inputType="number"
            android:layout_marginLeft="30dp"/>

        <Button
            android:id="@+id/login_send_code"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_title_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_login_code"
            android:text="获取验证码"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:background="@color/light_gray"/>


    <Button
        android:id="@+id/login_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_middle"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:background="@drawable/bg_gray_login_button"
        android:text="登录"
        android:textColor="@color/white"/>


    <Button
            android:id="@+id/login_submit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_middle"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:background="@drawable/bg_gray_login_button"
            android:text="登录2"
            android:textColor="@color/white"/>

    <Button
            android:id="@+id/login_submit3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_middle"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:background="@drawable/bg_gray_login_button"
            android:text="跳隐式Intent之默认category"
            android:textColor="@color/white"/>

    <Button
        android:id="@+id/login_submit4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_middle"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:background="@drawable/bg_gray_login_button"
        android:text="跳隐式Intent之不同category"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/login_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="未注册过匠云师傅的手机号，我们将自动帮你注册账号"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_large"/>



</LinearLayout>